{% extends "layout.njk" %}

{% block head %}
  <title>{{filter}}</title>
{% endblock %}

{% block content %}
	<main>
		<h1>Buscando por... {{filter}}</h1>

		<div class="content">
			{% for recipe in recipes %}
			<div class="card food" id="{{recipe.id}}">
				<img
					src="{{recipe.image}}"
					alt="{{recipe.title}}"
				/>
				<h3>{{recipe.title}}</h3>
				<p>por {{recipe.author}}</p>
			</div>
			{% endfor %}
		</div>
	</main>
{% endblock %}