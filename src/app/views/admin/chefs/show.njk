{% extends "admin/chefs/layout.njk" %}

{% block head %}
  <title>Chef {{chef.name}}</title>
{% endblock %}

{% block content %}
<div class="wrapper">
  <div class="menu-edit">
    <h1>Chef: {{chef.name}} </h1>
    <a href="/admin/chefs/{{ chef.id }}/edit">Editar chef</a>
  </div>

  <div class="chef">
    <div class="chef-header">
      <img src="{{chef.avatar_url}}" alt="{{chef.name}}" />
      <div class="head-group">
        <h1>{{chef.name}}</h1>
        <p>{{chef.total_recipes}} receitas</p>
      </div>
    </div>
  </div>
</div>
{% endblock %}