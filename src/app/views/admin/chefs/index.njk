{% extends "admin/chefs/layout.njk" %}

{% block content %}
<div class="wrapper">
  <main>
    <div class="menu-edit">
      <h1>Gerenciar chefs</h1>
      <a href="/admin/chefs/create">Adicionar chef</a>
    </div>
    <div class="grid-chefs">
      {% for chef in chefs %}
      <div class="card" id="{{chef.id}}">
        <img
          src="{{chef.avatar_url}}"
          alt="{{chef.name}}"
        />
        <div class="content">
          <h2>{{chef.name}}</h2>
          <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
        </div>
      </div>
      {% endfor %}
    </div>
  </main>
</div>
{% endblock %}