{% extends "user/layout.njk" %}

{% block head %}
  <title>Receitas Foodfy</title>
{% endblock %}

{% block content %}
<div class="wrapper">
	<main>
		<div class="content">
			{% for recipe in recipes %}
			<div class="card" id="{{recipe.id}}">
				<img
					src="{{recipe.image}}"
					alt="{{recipe.title}}"
				/>
				<h3>{{recipe.title}}</h3>
				<p>por {{recipe.author}}</p>
			</div>
			{% endfor %}
		</div>
	</main>
</div>
{% endblock %}